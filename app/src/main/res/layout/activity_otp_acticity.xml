<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".OtpActicity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:id="@+id/otp_text">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/slightdarkblue"
            android:src="@drawable/back"
            android:id="@+id/otp_fab"
            android:elevation="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"/>
      <com.airbnb.lottie.LottieAnimationView
          android:layout_width="200dp"
          android:layout_height="190dp"
          android:layout_marginTop="30dp"
          app:lottie_rawRes="@raw/otpgif"
          android:elevation="10dp"
          android:layout_marginLeft="110dp"
          android:layout_marginRight="100dp"
          android:id="@+id/otp_gif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textAlignment="center"
            android:text="@string/otp_digits"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </FrameLayout>

    <com.chaos.view.PinView
        android:id="@+id/pinview"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="35dp"
        android:cursorVisible="true"
        android:inputType="number"
        android:textSize="18sp"
        app:itemCount="6"
        app:itemHeight="48dp"
        app:itemRadius="4dp"
        app:lineColor="@color/black" />
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_below="@+id/pinview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="62dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/lightblue"
        android:background="@drawable/blue_border_rounded_cornwe"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/verify"
            android:text="@string/verify_txt"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/verify_icon"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:paddingLeft="17dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginRight="30dp"
            android:textSize="15sp"
            android:elevation="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/verify_icon"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/verify_icon"/>
    </RelativeLayout>

</RelativeLayout>