<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="7dp"
    android:padding="10dp"
    android:id="@+id/consultant_Cardview"
    app:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/consultant_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:padding="5dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/consultant_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/hospital" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/consultant_image"
            android:id="@+id/consultant_linear_layout">

        <TextView
            android:id="@+id/consultant_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Dentist"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />


        </LinearLayout>



    </RelativeLayout>


</androidx.cardview.widget.CardView>