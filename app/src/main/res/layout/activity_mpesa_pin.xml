<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MpesaPinActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter M-PESA PIN"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="80dp"/>
    <EditText
        android:id="@+id/mpesa_pin_edit_text"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:backgroundTint="@color/green"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Characters4"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mpesa_pin_cancel"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:text="Cancel"
            android:textColor="@color/cultured"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/mpesa_pin_ok"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@color/green"
            android:textColor="@color/grey"
            android:text="OK"/>

    </LinearLayout>




</LinearLayout>