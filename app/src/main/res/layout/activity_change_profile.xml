<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ChangeProfileActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_fab_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/slightdarkblue"
        android:elevation="1dp"
        android:src="@drawable/icons8_back" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/hospital"
        android:id="@+id/profile_image_view"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/change_profile_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_view"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:text="@string/changep"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_centerInParent="true"
        android:layout_height="50dp"
        android:layout_below="@+id/change_profile_id"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_person_24"
            app:tint="#0B0909"
            android:id="@+id/person_id"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/person_id"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/person_id"
            android:text="Name"
            android:id="@+id/Profile_name_text"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/edit_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/Profile_name_text"
            android:layout_toRightOf="@+id/Profile_name_text"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="#0B0909" />

    </RelativeLayout>
</RelativeLayout>