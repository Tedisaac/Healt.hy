<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultantActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/consultant_back_fab"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/gradient_background"
            android:elevation="5dp"
            android:src="@drawable/icons8_back"
            app:borderWidth="0dp" />
        <TextView
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/consultant_back_fab"
            android:fontFamily="@font/crazyxeon"
            android:text="Constltants"
            android:textColor="@color/black"
            android:textSize="37sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp"
        android:id="@+id/consultant_recycler_view"/>
    </ScrollView>

</RelativeLayout>